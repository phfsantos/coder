{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "storageAcctName": {
      "type": "string",
      "metadata": {
        "description": "Storage account which will hold the share and volumes"
      }
    },
    "storageAcctKey": {
      "type": "securestring",
      "metadata": {
        "description": "Storage account key"
      }
    },
    "password": {
      "type": "securestring",
      "metadata": {
        "description": "Login password"
      }
    },
    "imageRegistryLoginServer": {
        "type": "string"
    },
    "imageUsername": {
        "type": "string"
    },
    "imagePassword": {
        "type": "secureString"
    }
  },
  "variables": {
    "containerName": "code-server",
    "containerDNS": "[concat(variables('containerName'), '-', uniqueString(subscription().subscriptionId))]",
    "image": "ordepim/coder",
    "port": "80",
    "command-line": ["sudo", "code-server", "--allow-http", "[concat('--password=', parameters('password'))]", "[concat('--port=', variables('port'))]"],
    "project-share": "code-server-proj",
    "bin-share": "code-server-bin",
    "data-share": "code-server-data"
  },
  "resources": [
    {
      "name": "[variables('containerName')]",
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2018-10-01",
      "location": "[resourceGroup().location]",
      "properties": {
        "containers": [
          {
            "name": "[variables('containerName')]",
            "properties": {
              "image": "[variables('image')]",
              "command": "[variables('command-line')]",
              "ports": [
                {
                  "port": "[variables('port')]"
                }
              ],
              "volumeMounts": [
                {
                  "name": "project-vol",
                  "mountPath": "/root/project"
                },
                {
                  "name": "data-vol",
                  "mountPath": "/root/.local/share/code-server"
                },
                {
                  "name": "bin-vol",
                  "mountPath": "/usr/local/lib/node_modules"
                }
              ],
              "resources": {
                "requests": {
                  "cpu": "1",
                  "memoryInGB": "1.5"
                }
              }
            }
          }
        ],
        "osType": "Linux",
        "ipAddress": {
          "type": "Public",
          "dnsNameLabel": "[variables('containerDNS')]",
          "ports": [
            {
              "protocol": "TCP",
              "port": "[variables('port')]"
            }
          ]
        },
        "imageRegistryCredentials": [
            {
                "server": "[parameters('imageRegistryLoginServer')]",
                "username": "[parameters('imageUsername')]",
                "password": "[parameters('imagePassword')]"
            }
        ],
        "volumes": [
          {
            "name": "project-vol",
            "azureFile": {
              "shareName": "[variables('project-share')]",
              "storageAccountName": "[parameters('storageAcctName')]",
              "storageAccountKey": "[parameters('storageAcctKey')]"
            }
          },
          {
            "name": "data-vol",
            "azureFile": {
              "shareName": "[variables('data-share')]",
              "storageAccountName": "[parameters('storageAcctName')]",
              "storageAccountKey": "[parameters('storageAcctKey')]"
            }
          },
          {
            "name": "bin-vol",
            "azureFile": {
              "shareName": "[variables('bin-share')]",
              "storageAccountName": "[parameters('storageAcctName')]",
              "storageAccountKey": "[parameters('storageAcctKey')]"
            }
          }
        ]
      }
    }
  ],
  "outputs": {
    "codeServerURL": {
      "value": "[concat('http://', reference(variables('containerName')).ipAddress.fqdn)]",
      "type": "string"
    }
  }
}
